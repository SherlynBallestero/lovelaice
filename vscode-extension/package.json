{
  "name": "lovelaice",
  "description": "An AI-powered writing assistant for VSCode",
  "author": "Alejandro Piad Morffis",
  "repository": "https://github.com/apiad/lovelaice",
  "license": "MIT",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [{
      "command": "lovelaice.generateDocument",
      "title": "Generate Document from Scratch",
      "category": "Lovelaice"
    }],
    "configuration": {
      "type": "object",
      "title": "Lovelaice Server Configuration",
      "properties": {
        "lovelaice.openaiToken": {
          "scope": "resource",
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
